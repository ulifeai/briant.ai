{
  "type": "element",
  "tag": "div",
  "props": {
    "className": "container mx-auto px-4 py-8"
  },
  "children": [
    {
      "type": "element",
      "tag": "div",
      "props": {
        "className": "relative w-full h-[300px] rounded-xl overflow-hidden mb-8"
      },
      "children": [
        {
          "type": "component",
          "component": "Image",
          "package": "next/image",
          "props": {
            "src": "/placeholder.png",
            "alt": "Two people smiling and looking at each other",
            "layout": "fill",
            "objectFit": "cover"
          }
        },
        {
          "type": "element",
          "tag": "div",
          "props": {
            "className": "absolute text-white inset-0 bg-black bg-opacity-40 flex flex-col items-start justify-end p-8"
          },
          "children": [
            {
              "type": "component",
              "component": "Text",
              "package": "@/components/ui/base/text",
              "props": {
                "as": "h1",
                "className": "mb-2"
              },
              "children": [
                {
                  "type": "dynamicText",
                  "text": "title"
                }
              ]
            },
            {
              "type": "component",
              "component": "Text",
              "package": "@/components/ui/base/text",
              "props": {
                "as": "p",
                "className": "py-2 text-white max-w-4xl"
              },
              "children": [
                {
                  "type": "dynamicText",
                  "text": "description"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "element",
      "tag": "div",
      "props": {
        "className": "grid grid-cols-1 md:grid-cols-3 gap-6"
      },
      "children": [
        {
          "type": "loop",
          "loop": {
            "array": "feature_items",
            "iterator": "service"
          },
          "children": [
            {
              "type": "component",
              "component": "Card",
              "package": "@/components/ui/card",
              "props": {
                "key": "{index}",
                "className": "{index % 2 == 0 ? \"bg-gray-200\" : \"bg-gray-200\"}"
              },
              "children": [
                {
                  "type": "component",
                  "component": "CardHeader",
                  "package": "@/components/ui/card",
                  "children": [
                    {
                      "type": "element",
                      "tag": "div",
                      "props": {
                        "className": "w-12 h-12 bg-white rounded-full flex items-center justify-center mb-4"
                      },
                      "children": [
                        {
                          "type": "dynamicText",
                          "text": "index + 1"
                        }
                      ]
                    },
                    {
                      "type": "component",
                      "component": "CardTitle",
                      "package": "@/components/ui/card",
                      "children": [
                        {
                          "type": "dynamicText",
                          "text": "service.title"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "component",
                  "component": "CardContent",
                  "package": "@/components/ui/card",
                  "children": [
                    {
                      "type": "element",
                      "tag": "p",
                      "props": {
                        "className": "leading-loose text-md text-gray-600"
                      },
                      "children": [
                        {
                          "type": "dynamicText",
                          "text": "service.description"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}