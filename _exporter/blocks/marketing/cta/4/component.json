{
  "type": "element",
  "tag": "div",
  "props": {
    "className": "relative px-[5%] py-16 max-h-[20rem] flex items-center overflow-hidden"
  },
  "children": [
    {
      "type": "element",
      "tag": "div",
      "props": {
        "style": "{{\n  backgroundImage: `url(${image.image})`,\n  backgroundSize: \"cover\",\n  backgroundPosition: \"center\",\n  filter: \"brightness(0.4)\"\n}}",
        "role": "img",
        "aria-label": "{image.alt}",
        "className": "absolute inset-0 z-0"
      }
    },
    {
      "type": "element",
      "tag": "div",
      "props": {
        "className": "relative z-10 w-full max-w-6xl mx-auto text-white"
      },
      "children": [
        {
          "type": "element",
          "tag": "div",
          "props": {
            "className": "flex flex-col gap-y-12 lg:gap-x-12 lg:items-center"
          },
          "children": [
            {
              "type": "element",
              "tag": "div",
              "props": {
                "className": "flex flex-col text-center items-center"
              },
              "children": [
                {
                  "type": "element",
                  "tag": "div",
                  "children": [
                    {
                      "type": "element",
                      "tag": "h1",
                      "props": {
                        "style": "{{\n  fontFamily: \"var(--header-font)\"\n}}",
                        "className": "text-4xl font-bold py-2"
                      },
                      "children": [
                        {
                          "type": "dynamicText",
                          "text": "title"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "tag": "p",
                      "props": {
                        "style": "{{\n  fontFamily: \"var(--page-font)\"\n}}",
                        "className": "text-base py-2 text-gray-200"
                      },
                      "children": [
                        {
                          "type": "dynamicText",
                          "text": "description"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "tag": "div",
                      "props": {
                        "className": "mt-8"
                      },
                      "children": [
                        {
                          "type": "element",
                          "tag": "div",
                          "props": {
                            "className": "w-full flex items-center"
                          },
                          "children": [
                            {
                              "type": "element",
                              "tag": "div",
                              "props": {
                                "className": "lg:max-w-[30rem] mx-auto"
                              },
                              "children": [
                                {
                                  "type": "conditional",
                                  "condition": "form",
                                  "children": [
                                    {
                                      "type": "element",
                                      "tag": "form",
                                      "props": {
                                        "action": "",
                                        "className": "flex flex-col gap-y-3 mb-4 lg:grid lg:grid-rows-1 lg:grid-cols-[1fr_max-content] lg:gap-x-4"
                                      },
                                      "children": [
                                        {
                                          "type": "component",
                                          "component": "Input",
                                          "package": "@/components/ui/input",
                                          "props": {
                                            "type": "text",
                                            "placeholder": "{form?.placeholder ?? \"\"}",
                                            "className": "border border-black h-auto min-h-11 mb-0 px-2 rounded-none text-base leading-relaxed bg-white text-black"
                                          }
                                        },
                                        {
                                          "type": "loop",
                                          "loop": {
                                            "array": "buttons",
                                            "iterator": "button"
                                          },
                                          "children": [
                                            {
                                              "type": "component",
                                              "component": "Button",
                                              "package": "@/components/ui/button",
                                              "props": {
                                                "key": "{index}",
                                                "style": "{{\n  borderRadius: \"var(--button-radius)\"\n}}",
                                                "className": "whitespace-nowrap h-10 px-4 py-2"
                                              },
                                              "children": [
                                                {
                                                  "type": "dynamicText",
                                                  "text": "button.title"
                                                }
                                              ]
                                            }
                                          ]
                                        }
                                      ]
                                    }
                                  ],
                                  "else": [
                                    {
                                      "type": "fragment",
                                      "children": [
                                        {
                                          "type": "loop",
                                          "loop": {
                                            "array": "buttons",
                                            "iterator": "button"
                                          },
                                          "children": [
                                            {
                                              "type": "component",
                                              "component": "Button",
                                              "package": "@/components/ui/button",
                                              "props": {
                                                "key": "{index}",
                                                "variant": "{button.variant}",
                                                "size": "{button.size}",
                                                "style": "{{\n  borderRadius: \"var(--button-radius)\"\n}}",
                                                "className": "whitespace-nowrap h-10 mx-2 px-4 py-2"
                                              },
                                              "children": [
                                                {
                                                  "type": "dynamicText",
                                                  "text": "button.title"
                                                }
                                              ]
                                            }
                                          ]
                                        }
                                      ]
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "tag": "div",
              "props": {
                "className": "hidden lg:block"
              },
              "children": [
                {
                  "type": "text",
                  "text": " "
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}